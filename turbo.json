{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env.*", "$ALCHEMY_KEY"],
  "pipeline": {
    "chain": {
      "dependsOn": ["^chain"],
      "outputs": [""],
      "inputs": ["contracts/**/*.sol"]
    },
    "chain:fork": {
      "dependsOn": ["^chain:fork"],
      "outputs": [""],
      "inputs": ["contracts/**/*.sol"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": [""],
      "inputs": ["contracts/**/*.sol"]
    },
    "dev": {
      "outputs": [""]
    },
    "dev:fork": {
      "outputs": [""]
    },
    "lint": {
      "outputs": [""]
    },
    "watch": {
      "dependsOn": ["^watch"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build:prd": {
      "dependsOn": ["^build:prd"],
      "outputs": [".next", "out"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "lab": {
      "dependsOn": [
        "^watch",
        "^chain",
        "@web3-savings-cards/marketing-react#dev",
        "@web3-savings-cards/admin-react#dev",
        "@web3-savings-cards/app-react#dev"
      ],
      "outputs": [""]
    },
    "lab:fork": {
      "dependsOn": [
        "^watch",
        "@web3-savings-cards/core-sol#chain:fork",
        "@web3-savings-cards/marketing-react#dev",
        "@web3-savings-cards/admin-react#dev",
        "@web3-savings-cards/app-react#dev"
      ]
    }
  }
}
